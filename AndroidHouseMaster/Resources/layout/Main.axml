    android:id="@+id/_txtFrontTemp"
    android:text="---"
    android:textSize="20sp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    />
  <TextView
    android:id="@+id/_txtFrontHumidity"
    android:text="---"
    android:textSize="20sp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
  />
  <TextView
    android:id="@+id/_txtFrontHI"
    android:text="---"
    android:textSize="20sp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    />

  <Button
    android:id="@+id/_btnRefresh"
    android:text="Refresh"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    />

</LinearLayout>
