    />

  <!-- client view -->

  <TextView
    android:id ="@+id/_txtKitchenDoor"
    android:text="---"
    android:textSize="20sp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    />
  <TextView
    android:id="@+id/_txtGarageDoor"
    android:text="---"
    android:textSize="20sp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    />
  <TextView
    android:id="@+id/_txtGarageLights"
    android:text="---"
    android:textSize="20sp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    />
  <TextView
    android:id="@+id/_txtGarageBayA"
    android:text="---"
    android:textSize="20sp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
